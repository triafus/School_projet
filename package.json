{
  "name": "fullstack-auth-app",
  "version": "1.0.0",
  "description": "Template fullstack React TypeScript + NestJS avec authentification",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:client": "cd client && pnpm start",
    "start:server": "cd server && pnpm run start:dev",
    "start:prod": "cd server && pnpm run start:prod",
    "install:all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install",
    "dev": "concurrently \"pnpm run start:server\" \"pnpm run start:client\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/testing": "^11.1.5",
    "react-scripts": "^0.0.0"
  }
}
